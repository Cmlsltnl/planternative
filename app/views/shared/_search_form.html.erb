
<%= simple_form_for :index, url: products_path, id: "form_id", method: :get do |f| %>
  <div class="d-inline-block search-form">
    <%= f.input :name, label: false, placeholder: "Search" %>
    <%= f.button :button, type: :submit, class: 'search-form-button' do %>
        <%= icon("fa", "search") %>
    <% end %>
  </div>
<% end %>

