<div class="navbar navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= cl_image_tag "default_avatar_yubqpb" %>
  <% end %>
  <% if user_signed_in? %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item dropdown">
          <% if current_user.avatar.attached? %>
            <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= cl_image_tag "default_avatar_yubqpb", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
        </li>
        <% if shopping_list.persisted? %>
          <li class="nav-item">
            <%= link_to "Shopping list", shopping_list_path(shopping_list), class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Shopping list", shopping_lists_path(ShoppingList.new), method: :post, class: "nav-link" %>
          </li>
        <% end %>
        <li class="nav-item">
          <%= link_to "My profile", myprofile_path(current_user.nickname), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Add an alternative", new_product_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Explore", meals_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages", chatrooms_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
      </ul>
    </div>
  <% else %>
    <li class="nav-item nav-link">
      <%= link_to "Login", new_user_session_path %>
    </li>
  <% end %>
</div>
