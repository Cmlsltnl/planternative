<h1>Hello, <%= current_user.first_name %> ~ </h1>

<h4><%= link_to "Edit your profile", user_registration_path, method: :patch %></h4>

<h2>Your eco-score</h2>

<% @shopping_lists.each do |shopping_list| %>
  <% shopping_list.products.each do |product| %>
    <p><%= product.name %></p>
    <p><%= product.water_saved %>litres of water</p>
    <p><%= product.energy_saved %>kg of CO2</p>
  <% end %>
<% end %>

<h2>Your shopping lists</h2>
<table>
  <tr>
    <th>Date</th>
    <th>Items</th>
  </tr>
  <tr>
    <% @shopping_lists.each do |shopping_list| %>
      <td><%= shopping_list.date %></td>
    <% end %>
  </tr>
  <tr>
    <% @shopping_lists.each do |shopping_list| %>
      <td><%= shopping_list.products.count %></td>
    <% end %>
  </tr>
  <tr>
    <td>
      <% @shopping_lists.each do |shopping_list| %>
        <%= link_to "See details", shopping_list_path(shopping_list) %>
      <% end %>
    </td>
  </tr>
</table>

