<ul class="nav nav-tabs show-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="nutritional-info-tab" data-toggle="tab" href="#nutritional-info" role="tab" aria-controls="nutritional-info" aria-selected="true">Nutritional Information</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="ingredients-tab" data-toggle="tab" href="#ingredients" role="tab" aria-controls="ingredients" aria-selected="false">Ingredients</a>
  </li>
</ul>

<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="nutritional-info" role="tabpanel" aria-labelledby="nutritional-info-tab">
    <section class="product-tab product-section">
      <!-- <h4 class="sub-heading">NUTRITION</h4> -->
      <table class='styled-table'>
        <tr>
          <th>Nutritional info</th>
          <th>Per 100g</th>
        </tr>
        <tr>
          <td>Calories</td>
          <td><%= @product.calories_per_100g %></td>
        </tr>
        <tr>
          <td>Carbohydrates</td>
          <td><%= @product.carbs_per_100g %></td>
        </tr>
        <tr>
          <td>Protein</td>
          <td><%= @product.protein_per_100g %></td>
        </tr>
        <tr>
          <td>Fat</td>
          <td><%= @product.fat_per_100g %></td>
        </tr>
      </table>
    </section>
  </div>

  <div class="tab-pane fade" id="ingredients" role="tabpanel" aria-labelledby="ingredients-tab">
    <section class="product-tab product-section">
     <!--  <h4 class="sub-heading">INGREDIENTS</h4> -->
      <p><strong>Ingredients:</strong> <%= @product.ingredients %></p>
    </section>
  </div>
</div>
